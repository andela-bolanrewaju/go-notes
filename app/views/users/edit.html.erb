<% provide(:title, "Edit profile") %>

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
  <!-- Profile tab content -->
    <div role="tabpanel" class="clear-fix tab-pane fade in active" id="profile"> 
      <div class="row">
        <%= form_for(@user) do |f| %>
        <div class="col-md-4 col-md-offset-3">
          <h1>Edit your profile</h1>
          <p>You can edit your profile below</p>
            <%= render 'form', f: f %>
        </div>
        <div class="col-md-3 left">
          <div class="gravatar_edit col-md-offset-2">
            <%= gravatar_for @user %>
            <a href="http://gravatar.com/emails" target="_blank" class="btn btn-info btn-sm">change</a>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-5"><%= f.submit "Save changes", class: "btn btn-primary col-md-4" %></div>
        <% end %>
      </div>
    </div>
    <!-- Settings tab content -->
    <div role="tabpanel" class="tab-pane fade clear-fix " id="settings">
      <div class="col-md-6 col-md-offset-2">
        <h1>Notes Settings</h1>
        <p>Settings for your notes goes here</p>
      </div>
    </div>
  </div>

</div>
